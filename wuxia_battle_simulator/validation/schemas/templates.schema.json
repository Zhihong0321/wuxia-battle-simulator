{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Narrative Templates",
  "type": "object",
  "properties": {
    "templates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "narrative_type", "conditions", "template"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "narrative_type": { "type": "string", "enum": ["攻击", "抵挡", "闪避", "暴击"] },
          "conditions": {
            "type": "object",
            "properties": {
              "hit": { "type": "boolean" },
              "critical": { "type": "boolean" },
              "damage_percent": { "type": "string", "enum": ["low", "medium", "high"] },
              "actor_faction": { "type": "string" },
              "target_faction": { "type": "string" }
            },
            "additionalProperties": false
          },
          "template": { "type": "string", "minLength": 1 },
          "connective_phrases": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["templates"],
  "additionalProperties": false
}