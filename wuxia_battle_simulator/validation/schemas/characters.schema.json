{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Characters",
  "type": "object",
  "properties": {
    "characters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "level", "faction", "faction_terminology", "stats", "skills"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "level": { "type": "integer", "minimum": 1 },
          "faction": { "type": "string", "minLength": 1 },
          "faction_terminology": {
            "type": "object",
            "required": ["attack_prefix", "defense_prefix", "qi_name"],
            "properties": {
              "attack_prefix": { "type": "string" },
              "defense_prefix": { "type": "string" },
              "qi_name": { "type": "string" }
            },
            "additionalProperties": true
          },
          "stats": {
            "type": "object",
            "required": ["hp", "max_hp", "qi", "max_qi", "strength", "agility", "defense"],
            "properties": {
              "hp": { "type": "integer", "minimum": 0 },
              "max_hp": { "type": "integer", "minimum": 1 },
              "qi": { "type": "integer", "minimum": 0 },
              "max_qi": { "type": "integer", "minimum": 0 },
              "strength": { "type": "integer", "minimum": 0 },
              "agility": { "type": "integer", "minimum": 0 },
              "defense": { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": false
          },
          "skills": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["skill_id", "tier"],
              "properties": {
                "skill_id": { "type": "string", "minLength": 1 },
                "tier": { "type": "integer", "minimum": 1 }
              },
              "additionalProperties": false
            }
          },
          "equipped_skills": {
            "type": "object",
            "properties": {
              "attack": {
                "type": "object",
                "properties": {
                  "skill_id": { "type": "string", "minLength": 1 },
                  "tier": { "type": "integer", "minimum": 1 }
                },
                "required": ["skill_id", "tier"],
                "additionalProperties": false
              },
              "defense": {
                "type": "object",
                "properties": {
                  "skill_id": { "type": "string", "minLength": 1 },
                  "tier": { "type": "integer", "minimum": 1 }
                },
                "required": ["skill_id", "tier"],
                "additionalProperties": false
              },
              "movement": {
                "type": "object",
                "properties": {
                  "skill_id": { "type": "string", "minLength": 1 },
                  "tier": { "type": "integer", "minimum": 1 }
                },
                "required": ["skill_id", "tier"],
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          },
          "personality_traits": {
            "type": "array",
            "items": { "type": "string" }
          },
          "battle_quotes": {
            "type": "object",
            "properties": {
              "victory": { "type": "array", "items": { "type": "string" } },
              "defeat": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["characters"],
  "additionalProperties": false
}