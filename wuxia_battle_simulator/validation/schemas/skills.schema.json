{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skills",
  "type": "object",
  "properties": {
    "skills": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "type", "description", "tiers"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "enum": ["攻击", "抵挡", "闪避", "暴击"] },
          "description": { "type": "string" },
          "tiers": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["tier", "tier_name", "parameters"],
              "properties": {
                "tier": { "type": "integer", "minimum": 1 },
                "tier_name": { "type": "string", "minLength": 1 },
                "parameters": {
                  "type": "object",
                  "required": ["base_damage", "power_multiplier", "qi_cost", "cooldown", "hit_chance", "critical_chance"],
                  "properties": {
                    "base_damage": { "type": "integer", "minimum": 0 },
                    "power_multiplier": { "type": "number", "minimum": 0 },
                    "qi_cost": { "type": "integer", "minimum": 0 },
                    "cooldown": { "type": "integer", "minimum": 0 },
                    "hit_chance": { "type": "number", "minimum": 0, "maximum": 1 },
                    "critical_chance": { "type": "number", "minimum": 0, "maximum": 1 }
                  },
                  "additionalProperties": false
                },
                "visual_effects": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "sound_effects": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["skills"],
  "additionalProperties": false
}